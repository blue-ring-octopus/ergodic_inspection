<launch>
  <!-- Arguments -->
  <arg name="move_forward_only" default="true"/>

  <!-- move_base -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" />
    <rosparam file="$(find ergodic_inspection)/param/move_base/costmap_common_params_burger_custom.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find ergodic_inspection)/param/move_base/costmap_common_params_burger_custom.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find ergodic_inspection)/param/move_base/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find ergodic_inspection)/param/move_base/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find ergodic_inspection)/param/move_base/move_base_params.yaml" command="load" />
    <rosparam file="$(find ergodic_inspection)/param/move_base/dwa_local_planner_params_burger_custom.yaml" command="load" />
    <param name="DWAPlannerROS/min_vel_x" value="0.0" if="$(arg move_forward_only)" />
  </node>
</launch>